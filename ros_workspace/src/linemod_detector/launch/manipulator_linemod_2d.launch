<?xml version="1.0"?>
<!-- Launch for the sample_detection node -->
<!-- vim: set fenc=utf-8 et sts=4 ft=xml : -->
<launch>
    <arg name="user" default="robot"/>
    <arg name="path" default="Desktop"/>
    <arg name="kind" default="install"/>
    <include file="$(find samplereturn)/launch/machine_definitions.launch">
        <arg name="user" value="$(arg user)"/>
        <arg name="path" value="$(arg path)"/>
        <arg name="kind" value="$(arg kind)"/>
    </include>

      <node
        machine="search"
        pkg="linemod_detector"
        type="linemod_detector"
        name="manipulator_linemod_detector">
      <remap from="color" to="/manipulator/left/image_rect_color"/>
      <remap from="cam_info" to="/manipulator/left/camera_info"/>
      <param name="template_file" type="string" value="$(find linemod_detector)/config/manipulator_samples_2d.yaml"/>
      <param name="pub_threshold" type="double" value="80.0"/>
      <param name="min_depth" type="double" value="100.0"/>
      <param name="max_depth" type="double" value="1000.0"/>
      <param name="min_count" type="double" value="100.0"/>
    </node>
</launch>
