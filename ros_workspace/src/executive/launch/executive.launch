<?xml version="1.0"?>
<!-- vim: set fenc=utf-8 et sts=4 ft=xml : -->
<launch>
    <arg name="wait_for_cameras" default="true"/>
    <node
        machine="navigate"
        pkg="executive"
        type="master_executive.py"
        name="master_executive"
        output="log">
        <param name="home_pursuit_complete_distance" type="double" value="4.0"/>
        <param name="maximum_pursuit_error" type="double" value="0.5"/>
        <param name="wait_for_cameras" value="$(arg wait_for_cameras)"/>

        <remap from="manipulator_point" to="/manipulator/filtered_points"/>
        <remap from="search_point" to="/sample_detection/filtered_points"/>

        <!--
        <remap from="img_point" to="filtered_points"/>
        -->
    </node>

    <node
        machine="search"
        pkg="detection_filter"
        type="detection_filter_node.py"
        name="detection_filter"
        ns="manipulator"
        >

        <remap from="raw_points" to="point"/>

        <param name="filter_tolerance" type="double" value="0.10"/>
    </node>

</launch>
