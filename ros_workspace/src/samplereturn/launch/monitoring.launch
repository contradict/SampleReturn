<?xml version="1.0"?>
<!-- vim: set fenc=utf-8 et sts=4 ft=xml : -->
<launch>
<!-- when we get the pr2_computer_montor package installed add CPU monitoring
    <node pkg="pr2_computer_monitor" 
            type="hd_monitor.py"
            machine="navigate"
            name="sr1_hd_monitor"
            args="$(optenv HOME /home) \-\-diag-hostname=sr1"
            ns="/processes/diagnostics"
            >
        <param name="no_hd_temp_warn" value="false" type="bool" />
    </node>
    <node pkg="pr2_computer_monitor"
            type="cpu_monitor.py"
            machine="navigate"
            name="sr1_cpu_monitor"
            args="\-\-diag-hostname=sr1"
            ns="/processes/diagnostics"
            >
        <param name="check_ipmi_tool" value="false" type="bool" />
        <param name="enforce_clock_speed" value="false" type="bool" />
        <param name="num_cores" value="-1" type="int" />
    </node>
-->

    <node pkg="diagnostic_common_diagnostics"
            type="hd_monitor.py"
            machine="search"
            name="sr2_hd_monitor"
            args="$(optenv HOME /home) --diag-hostname=sr2"
            ns="/processes/diagnostics"
            >
        <param name="no_hd_temp_warn" value="false" type="bool" />
    </node>
    <node pkg="diagnostic_common_diagnostics"
            type="cpu_monitor.py"
            machine="search"
            name="sr2_cpu_monitor"
            args="--diag-hostname=sr2"
            ns="/processes/diagnostics"
            >
        <param name="check_ipmi_tool" value="false" type="bool" />
        <param name="enforce_clock_speed" value="false" type="bool" />
        <param name="num_cores" value="-1" type="int" />
    </node>

    <node pkg="diagnostic_common_diagnostics"
            type="tf_monitor.py"
            name="tf_monitor"
            machine="navigate"
            ns="/processes/diagnostics"
            />

    <node pkg="diagnostic_aggregator"
            type="aggregator_node"
            name="diag_aggregator"
            machine="navigate"
            ns="/processes/diagnostics"
            >
        <rosparam command="load" 
            file="$(find samplereturn)/config/diag_aggr.yaml" />
    </node>
</launch>
