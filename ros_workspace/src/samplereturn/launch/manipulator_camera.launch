<?xml version="1.0"?>
<!-- vim: set fenc=utf-8 et sts=4 ft=xml : -->
<launch>
    <!-- Manipulator Nodelet Host process -->
    <node
        machine="search"
        pkg="nodelet"
        type="nodelet"
        name="manager"
        args="manager"
        ns="/manipulator"
        output="log"
        respawn="true"
        >
    </node>
    <node
         machine="search"
         pkg="nodelet"
         type="nodelet"
         name="left"
         args="load camera1394/driver /manipulator/manager"
         ns="/manipulator"
         respawn="true"
         >

        <param name="guid" type="string" value="00b09d0100a85650"/>
        <param name="video_mode" value="640x480_mono8"/>
        <param name="frame_id" value="manipulator_left_camera"/>
        <param name="frame_rate" value="30"/>
        <param name="bayer_pattern" value="rggb"/>
        <param name="auto_exposure" type="int" value="2"/>
        <param name="camera_info_url"
               type="string"
               value="file://$(find samplereturn)/calibration/ffmv-manipulator-kowa3.5mm-left.yaml" />
        <remap from="camera" to="left" />
    </node>
    <node
         machine="search"
         pkg="nodelet"
         type="nodelet"
         name="right"
         args="load camera1394/driver /manipulator/manager"
         ns="/manipulator"
         respawn="true"
         >

        <param name="guid" type="string" value="00b09d0100a85642"/>
        <param name="video_mode" value="640x480_mono8"/>
        <param name="frame_id" value="manipulator_left_camera"/>
        <param name="frame_rate" value="30"/>
        <param name="bayer_pattern" value="rggb"/>
        <param name="auto_exposure" type="int" value="2"/>
        <param name="camera_info_url"
               type="string"
               value="file://$(find samplereturn)/calibration/ffmv-manipulator-kowa3.5mm-right.yaml" />
        <remap from="camera" to="right" />
    </node>

    <!-- emit synchronization error -->
    <node
        machine="search"
        pkg="samplereturn"
        type="image_desync.py"
        name="image_desync"
        ns="/manipulator">
        <param name="manager_node_name" type="string" value="/manipulator/manager"/>
        <param name="sync_wait" type="double" value="30"/>
    </node>

    <!-- Debayer -->
    <node
          machine="search"
          pkg="nodelet"
          type="nodelet"
          name="debayer"
          args="load image_proc/debayer /manipulator/manager"
          ns="/manipulator/left"
          respawn="true"
          >
          <remap from="image_mono" to="debayer/image_mono"/>
          <remap from="image_color" to="debayer/image_color"/>
    </node>
    <node
          machine="search"
          pkg="nodelet"
          type="nodelet"
          name="debayer"
          args="load image_proc/debayer /manipulator/manager"
          ns="/manipulator/right"
          respawn="true"
          >
          <remap from="image_mono" to="debayer/image_mono"/>
          <remap from="image_color" to="debayer/image_color"/>
     </node>

    <!-- Rotate images 90 degrees -->
    <node
        machine="search"
        pkg="nodelet"
        type="nodelet"
        name="image_rot90_mono"
        args="load image_rot90/ImageRot90 /manipulator/manager"
        ns="/manipulator/left"
        respawn="true"
        >

        <remap from="rot90/image_raw_in" to="debayer/image_mono"/>
        <remap from="rot90/image_raw_rot" to="image_mono"/>
        <param name="rot" type="string" value="pi/2"/>
    </node>
    <node
        machine="search"
        pkg="nodelet"
        type="nodelet"
        name="image_rot90_mono"
        args="load image_rot90/ImageRot90 /manipulator/manager"
        ns="/manipulator/right"
        respawn="true"
        >

        <remap from="rot90/image_raw_in" to="debayer/image_mono"/>
        <remap from="rot90/image_raw_rot" to="image_mono"/>
        <param name="rot" type="string" value="pi/2"/>
    </node>
    <node
        machine="search"
        pkg="nodelet"
        type="nodelet"
        name="image_rot90_color"
        args="load image_rot90/ImageRot90 /manipulator/manager"
        ns="/manipulator/left"
        respawn="true"
        >

        <remap from="rot90/image_raw_in" to="debayer/image_color"/>
        <remap from="rot90/image_raw_rot" to="image_color"/>
        <param name="rot" type="string" value="pi/2"/>
    </node>
    <node
        machine="search"
        pkg="nodelet"
        type="nodelet"
        name="image_rot90_color"
        args="load image_rot90/ImageRot90 /manipulator/manager"
        ns="/manipulator/right"
        respawn="true"
        >

        <remap from="rot90/image_raw_in" to="debayer/image_color"/>
        <remap from="rot90/image_raw_rot" to="image_color"/>
        <param name="rot" type="string" value="pi/2"/>
    </node>

    <!-- Rectify images -->
    <node
        machine="search"
        pkg="nodelet"
        type="nodelet"
        name="rect"
        args="load image_proc/rectify /manipulator/manager"
        ns="/manipulator/left"
        output="log"
        respawn="true"
        >
    </node>
    <node
        machine="search"
        pkg="nodelet"
        type="nodelet"
        name="rect_color"
        args="load image_proc/rectify /manipulator/manager"
        ns="/manipulator/left"
        output="log"
        respawn="true"
        >
        <remap from="image_mono" to="image_color"/>
        <remap from="image_rect" to="image_rect_color"/>
    </node>
    <node
        machine="search"
        pkg="nodelet"
        type="nodelet"
        name="rect"
        args="load image_proc/rectify /manipulator/manager"
        ns="/manipulator/right"
        output="log"
        respawn="true"
        >
    </node>
    <node
        machine="search"
        pkg="nodelet"
        type="nodelet"
        name="rect_color"
        args="load image_proc/rectify /manipulator/manager"
        ns="/manipulator/right"
        output="log"
        respawn="true"
        >
        <remap from="image_mono" to="image_color"/>
        <remap from="image_rect" to="image_rect_color"/>
    </node>

    <!-- Compute Stereo -->
    <node
        machine="search"
        pkg="nodelet"
        type="nodelet"
        name="stereo_image_disparity"
        args="load stereo_image_proc/disparity manager"
        ns="/manipulator"
        output="log"
        respawn="true"
        >
        <param name="prefilter_size" type="int" value="13"/>
        <param name="prefilter_cap" type="int" value="15"/>
        <param name="correlation_window_size" type="int" value="17"/>
        <param name="min_disparity" type="int" value="64"/>
        <param name="disparity_range" type="int" value="128"/>
        <param name="uniqueness_ratio" type="int" value="5"/>
        <param name="texture_threshold" type="int" value="1000"/>
        <param name="speckle_size" type="int" value="50"/>
        <param name="speckle_range" type="int" value="10"/>
        <param name="approximate_sync" type="bool" value="true"/>
    </node>

    <!-- Compute Stereo Point Cloud -->
    <node
        machine="search"
        pkg="nodelet"
        type="nodelet"
        name="stereo_image_points"
        args="load stereo_image_proc/point_cloud2 /manipulator/manager"
        ns="/manipulator"
        output="log"
        respawn="true"
        >
        <param name="approximate_sync" type="bool" value="true"/>
    </node>

</launch>
