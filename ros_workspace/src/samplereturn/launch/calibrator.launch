<?xml version="1.0"?>
<!-- vim: set fenc=utf-8 et sts=4 ft=xml : -->
<launch>
    <!-- Calibration tool -->

    <arg name="cameras" default="navigation/port"/>
    <node
        pkg="camera_calibration"
        type="cameracalibrator.py"
        name="calibrator"
        args="--size 8x6 --square 0.1 -p chessboard --approximate=0.05"
        output="screen"
        >
        <remap from="right" to="/cameras/$(arg cameras)/right/image_mono"/>
        <remap from="left" to="/cameras/$(arg cameras)/left/image_mono"/>
        <remap from="right_camera" to="/cameras/$(arg cameras)/right"/>
        <remap from="left_camera" to="/cameras/$(arg cameras)/left"/>
      </node>

</launch>
