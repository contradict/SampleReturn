<?xml version="1.0"?>
<!-- vim: set fenc=utf-8 et sts=4 ft=xml : -->
<launch>
    <arg name="user" default="robot"/>
    <arg name="path" default="Desktop"/>
    <arg name="kind" default="install"/>
     <include file="$(find samplereturn)/launch/machine_definitions.launch">
        <arg name="user" value="$(arg user)"/>
        <arg name="path" value="$(arg path)"/>
        <arg name="kind" value="$(arg kind)"/>
    </include>

    <!-- rosbag record -->
    <!--
  -->
  <node machine="navigate"
      pkg="rosbag"
      type="record"
      name="navigate_record"
      output="log"
      args="odometry tf platform_joint_state carousel navigation/right/image_raw navigation/left/image_raw navigation/right/camera_info navigation/left/camera_info">
  </node>

  <!-- DSLR Client and Publisher-->
  <!-- The wait between captures is hard-coded at 3.0 seconds,
        I'll make this a param at some point -->
   <node
       machine="search"
       pkg="samplereturn"
       type="camlogger.py"
       name="camlogger">
       <param name="calib_file" value="$(find samplereturn)/calibration/D5100-search.yaml"/>
       <param name="frame_id" value="search_camera_lens"/>
   </node>
   <node machine="search"
       pkg="rosbag"
       type="record"
       name="search_record"
       output="log"
       args="camimg caminfo manipulator/left/image_raw manipulator/right/image_raw manipulator/left/camera_info manipulator/right/camera_info"/>
</launch>
