<?xml version="1.0"?>
<!-- vim: set fenc=utf-8 et sts=4 ft=xml : -->
<launch>

    <!-- Run the costmap node -->
    <node machine="navigate" name="costmap_node" pkg="costmap_2d" type="costmap_2d_node"
        ns="navigation">
        <rosparam file="$(find samplereturn)/config/costmap_params.yaml" command="load" ns="costmap" />
    </node>

    <!-- Publishes the voxel grid to rviz for display -->
    <node machine="navigate" pkg="costmap_2d" type="costmap_2d_markers" name="voxel_visualizer"
        ns="navigation/costmap_node/costmap">
    </node>

    <node machine="navigate" pkg="costmap_2d" type="costmap_2d_cloud" name="voxel_visualizer_cloud"
        ns="navigation/costmap_node/costmap">
    </node>

    <!-- Run the fake localization -->
    <node machine="navigate" pkg="fake_localization" type="fake_localization" name="fake_localization">
        <remap from="base_pose_ground_truth" to="odometry"/>
    </node>

</launch>
