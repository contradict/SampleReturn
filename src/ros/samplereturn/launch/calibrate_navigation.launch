    <!-- Debayer -->
    <node
          machine="navigate"
          pkg="nodelet"
          type="nodelet"
          name="debayer"
          args="load image_proc/debayer /navigation_camera_process"
          ns="/navigation_stereo/left">
    </node>
    <node
          machine="navigate"
          pkg="nodelet"
          type="nodelet"
          name="debayer"
          args="load image_proc/debayer /navigation_camera_process"
          ns="/navigation_stereo/right">
    </node>

    <!-- Rectify images -->
    <node
        pkg="nodelet"
        type="nodelet"
        name="rectify"
        args="load image_proc/rectify /navigation_camera_process"
        ns="/navigation_stereo/left"
        output="log"
        >
        <remap from="image" to="image_mono"/>
    </node>
    <node
        pkg="nodelet"
        type="nodelet"
        name="rectify"
        args="load image_proc/rectify /navigation_camera_process"
        ns="/navigation_stereo/right"
        output="log"
        >
        <remap from="image" to="image_mono"/>
    </node>

    <!-- Compute Stereo -->
    <node
        pkg="nodelet"
        type="nodelet"
        name="stereo_image_disparity"
        args="load stereo_image_proc/disparity /navigation_camera_process"
        ns="/navigation_stereo"
        output="log"
        >
        <param name="correlation_window_size" type="int" value="17"/>
        <param name="min_disparity" type="int" value="0"/>
        <param name="disparity_range" type="int" value="256"/>
        <param name="uniqueness_ratio" type="int" value="5"/>
        <param name="texture_threshold" type="int" value="1000"/>
        <param name="approximate_sync" type="bool" value="true"/>
    </node>

